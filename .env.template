#docker compose build 时候从这个文件读取
# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=offercar_db

# JWT 密钥（生产环境请使用强密码）
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long_123456789
JWT_EXPIRES_IN=7d


# 默认 AI Provider（可选: openai | gemini）
AI_PROVIDER=openai

# ==================== OpenAI 配置 ====================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_URL=https://api.openai.com/v1

OPENAI_MODEL=gpt-4o
OPENAI_MODEL_GENERAL=gpt-4o-mini
OPENAI_MODEL_PRO=gpt-4o
OPENAI_MODEL_MAX=gpt-4o


# ==================== Gemini 配置 ====================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash-exp

# ==================== 向后兼容配置（优先级低） ====================
# 如果未设置上述特定 Provider 的配置，将使用这些默认值
AI_API_KEY=your-api-key-here
AI_API_URL=https://generativelanguage.googleapis.com/v1





# 邮件服务（必需）
EMAIL_HOST=smtp.example.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password-or-app-token
EMAIL_FROM="OfferCar AI <your-email@example.com>"


# Next.js 配置
# NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_DOCS_URL=http://localhost:3003

NEXT_PUBLIC_SIGNALING_SERVER_URL=http://localhost:3001

NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
# 您应用的基础 URL
# Better auth
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=generate-a-random-32-character-secret-key-here

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
